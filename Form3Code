        private void Button1_Click(object sender, EventArgs e)
        {
            if (sum >= 0 && sum <= 30)
            {
                string text = "Несериозен спестовник";
                string text2 = "Благодарим ви за усилията, които полагате. Но, както вероятно ще се съгласите, при вас има още много да се желае. Опитайте се да следвяте нашите съвети, за да станете по-добър спестовник.";
                MessageBox.Show(text2, text);
            }
            if(sum > 30 && sum < 60)
            {
                string text = "Среден спестовник";
                string text2 = "Много добре. Очевидно съзнавате, че пестенето на водата е важно и вече сте започнали да ставате сериозен спестовник. Полезните ни съвети ще ви помогнат да пестите още по-добре.";
                MessageBox.Show(text2, text);
            }
            if (sum >= 60)
            {
                string text = "Добър спестовник";
                string text2 = "Поздравления! Справяте се чудесно с пестенето на водата. Дайте полезни съвети на роднини и приятели, за да станат добри спестовници като вас.";
                MessageBox.Show(text2, text);
            }
        }

        private void Button2_Click(object sender, EventArgs e)
        {
            this.Close();
            Form2 secondForm = new Form2();
            secondForm.Show();
